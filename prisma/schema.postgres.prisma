// This is your Prisma schema file for PRODUCTION with PostgreSQL
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for OAuth authentication (Microsoft Entra, Google, etc.)
// PII is stored in the OAuth provider, we only keep the provider ID and role locally
model User {
  id        String   @id @default(cuid())
  visitorId String   @unique           // OAuth provider ID (Entra OID, Google sub, etc.)
  name      String?
  email     String   @unique
  role      String   @default("viewer") // viewer, editor, admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Campaigns this user can edit (for editors)
  editableCampaigns CampaignEditor[]
  // Campaigns created by this user
  createdCampaigns  Campaign[]        @relation("CampaignCreator")
}

// Many-to-many relationship between editors and campaigns
model CampaignEditor {
  id         String   @id @default(cuid())
  campaignId String
  userId     String
  createdAt  DateTime @default(now())
  
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([campaignId, userId])
}

// Campaign model - organizes Characters, Organisations, and relationships
model Campaign {
  id            String           @id @default(cuid())
  slug          String           @unique
  name          String
  description   String?
  imageUrl      String?
  imageCrop     String?          // JSON string for crop settings {zoom, offsetX, offsetY, aspectRatio}
  isActive      Boolean          @default(true)
  creatorId     String?          // User who created this campaign
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  
  creator       User?            @relation("CampaignCreator", fields: [creatorId], references: [id], onDelete: SetNull)
  editors       CampaignEditor[]
  characters    Character[]
  organisations Organisation[]
}

// Character model (replaces NPC)
model Character {
  id            String         @id @default(cuid())
  name          String
  title         String?
  description   String?
  imageUrl      String?
  imageCrop     String?        // JSON string for crop settings {zoom, offsetX, offsetY}
  faction       String?
  location      String?
  status        String         @default("alive")
  tags          String?
  posX          Float?
  posY          Float?
  campaignId    String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  campaign      Campaign?      @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  organisations Organisation[] @relation("CharacterOrganisations")
}

// Organisation model (replaces Crew)
model Organisation {
  id          String      @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  imageCrop   String?     // JSON string for crop settings {zoom, offsetX, offsetY}
  pinColor    String?     // Hex color for organization pins (e.g., #ff6b6b)
  posX        Float?
  posY        Float?
  campaignId  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  campaign    Campaign?   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  members     Character[] @relation("CharacterOrganisations")
}

// Universal Relationship - supports relationships between any entity types
model UniversalRelationship {
  id             String   @id @default(cuid())
  fromEntityId   String
  fromEntityType String
  toEntityId     String
  toEntityType   String
  type           String
  description    String?
  strength       Int      @default(5)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([fromEntityId, fromEntityType, toEntityId, toEntityType, type])
}

model Session {
  id          String   @id @default(cuid())
  name        String
  description String?
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
