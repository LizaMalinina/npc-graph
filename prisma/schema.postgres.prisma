// This is your Prisma schema file for PRODUCTION with PostgreSQL
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String    // Hashed password
  role          String    @default("viewer") // viewer, editor, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Campaign model - organizes NPCs, crews, and relationships
model Campaign {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Each campaign has one crew (the party)
  crew        Crew?
  
  // NPCs in this campaign
  npcs        Npc[]
}

// NPC model
model Npc {
  id          String   @id @default(cuid())
  name        String
  title       String?  // e.g., "The Blacksmith", "Village Elder"
  description String?
  imageUrl    String?
  faction     String?  // For filtering
  location    String?  // For filtering
  status      String   @default("alive") // alive, dead, unknown
  tags        String?  // Comma-separated tags for filtering
  
  // Campaign this NPC belongs to
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  // Graph position (for persisting layout)
  posX        Float?
  posY        Float?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationships where this NPC is the source
  relationshipsFrom Relationship[] @relation("FromNpc")
  // Relationships where this NPC is the target
  relationshipsTo   Relationship[] @relation("ToNpc")
  
  // Relationships from Crews to this NPC
  crewRelationshipsTo       CrewRelationship[]       @relation("CrewToNpc")
  // Relationships from CrewMembers to this NPC
  crewMemberRelationshipsTo CrewMemberRelationship[] @relation("CrewMemberToNpc")
}

// Relationship between NPCs
model Relationship {
  id          String   @id @default(cuid())
  fromNpcId   String
  toNpcId     String
  type        String   // friend, enemy, family, ally, rival, romantic, business, etc.
  description String?  // Optional description of the relationship
  strength    Int      @default(5) // 1-10 scale for edge thickness
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  fromNpc     Npc      @relation("FromNpc", fields: [fromNpcId], references: [id], onDelete: Cascade)
  toNpc       Npc      @relation("ToNpc", fields: [toNpcId], references: [id], onDelete: Cascade)
  
  @@unique([fromNpcId, toNpcId, type])
}

// Session model for campaigns/settings (deprecated - use Campaign)
model Session {
  id          String   @id @default(cuid())
  name        String
  description String?
  isActive    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Crew model - represents a group of characters (like a player party)
model Crew {
  id          String       @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  
  // Campaign this crew belongs to (one crew per campaign)
  campaignId  String?      @unique
  campaign    Campaign?    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Members of this crew
  members     CrewMember[]
  
  // Relationships where this Crew is the source
  relationshipsFrom CrewRelationship[] @relation("FromCrew")
}

// CrewMember - links a character to a crew
model CrewMember {
  id          String   @id @default(cuid())
  crewId      String
  name        String
  title       String?  // Role in the crew, e.g., "Captain", "First Mate"
  imageUrl    String?
  description String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  crew        Crew     @relation(fields: [crewId], references: [id], onDelete: Cascade)
  
  // Relationships where this crew member is the source
  relationshipsFrom CrewMemberRelationship[] @relation("FromCrewMember")
}

// Relationship between a Crew and an NPC
model CrewRelationship {
  id          String   @id @default(cuid())
  crewId      String
  toNpcId     String
  type        String   // friend, enemy, family, ally, rival, etc.
  description String?
  strength    Int      @default(5)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  crew        Crew     @relation("FromCrew", fields: [crewId], references: [id], onDelete: Cascade)
  toNpc       Npc      @relation("CrewToNpc", fields: [toNpcId], references: [id], onDelete: Cascade)
  
  @@unique([crewId, toNpcId, type])
}

// Relationship between a CrewMember and an NPC
model CrewMemberRelationship {
  id              String     @id @default(cuid())
  crewMemberId    String
  toNpcId         String
  type            String
  description     String?
  strength        Int        @default(5)
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  crewMember      CrewMember @relation("FromCrewMember", fields: [crewMemberId], references: [id], onDelete: Cascade)
  toNpc           Npc        @relation("CrewMemberToNpc", fields: [toNpcId], references: [id], onDelete: Cascade)
  
  @@unique([crewMemberId, toNpcId, type])
}
