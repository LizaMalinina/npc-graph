// This is your Prisma schema file for PRODUCTION with PostgreSQL
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for authentication
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String   // Hashed password
  role      String   @default("viewer") // viewer, editor, admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Campaign model - organizes Characters, Organisations, and relationships
model Campaign {
  id            String         @id @default(cuid())
  slug          String         @unique
  name          String
  description   String?
  imageUrl      String?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  characters    Character[]
  organisations Organisation[]
}

// Character model (replaces NPC)
model Character {
  id            String         @id @default(cuid())
  name          String
  title         String?
  description   String?
  imageUrl      String?
  imageCrop     String?        // JSON string for crop settings {zoom, offsetX, offsetY}
  faction       String?
  location      String?
  status        String         @default("alive")
  tags          String?
  posX          Float?
  posY          Float?
  campaignId    String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  campaign      Campaign?      @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  organisations Organisation[] @relation("CharacterOrganisations")
}

// Organisation model (replaces Crew)
model Organisation {
  id          String      @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  imageCrop   String?     // JSON string for crop settings {zoom, offsetX, offsetY}
  posX        Float?
  posY        Float?
  campaignId  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  campaign    Campaign?   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  members     Character[] @relation("CharacterOrganisations")
}

// Universal Relationship - supports relationships between any entity types
model UniversalRelationship {
  id             String   @id @default(cuid())
  fromEntityId   String
  fromEntityType String
  toEntityId     String
  toEntityType   String
  type           String
  description    String?
  strength       Int      @default(5)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([fromEntityId, fromEntityType, toEntityId, toEntityType, type])
}
