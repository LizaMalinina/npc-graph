generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      String   @default("viewer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Campaign {
  id            String         @id @default(cuid())
  slug          String         @unique
  name          String
  description   String?
  imageUrl      String?
  imageCrop     String?        // JSON string for crop settings {zoom, offsetX, offsetY, aspectRatio}
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  characters    Character[]
  organisations Organisation[]
}

model Character {
  id            String         @id @default(cuid())
  name          String
  title         String?
  description   String?
  imageUrl      String?
  imageCrop     String?        // JSON string for crop settings {zoom, offsetX, offsetY}
  faction       String?
  location      String?
  status        String         @default("alive")
  tags          String?
  posX          Float?
  posY          Float?
  campaignId    String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  campaign      Campaign?      @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  organisations Organisation[] @relation("CharacterOrganisations")
}

model Organisation {
  id          String      @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  imageCrop   String?     // JSON string for crop settings {zoom, offsetX, offsetY}
  pinColor    String?     // Hex color for organization pins (e.g., #ff6b6b)
  posX        Float?
  posY        Float?
  campaignId  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  campaign    Campaign?   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  members     Character[] @relation("CharacterOrganisations")
}

model UniversalRelationship {
  id             String   @id @default(cuid())
  fromEntityId   String
  fromEntityType String
  toEntityId     String
  toEntityType   String
  type           String
  description    String?
  strength       Int      @default(5)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([fromEntityId, fromEntityType, toEntityId, toEntityType, type])
}

model Session {
  id          String   @id @default(cuid())
  name        String
  description String?
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
